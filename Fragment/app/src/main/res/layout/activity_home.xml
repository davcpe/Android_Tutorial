
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="${relativePackage}.${activityClass}"
android:background="@drawable/white_three">


<android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#fffffa98"
    android:layout_marginTop="54dp"
    android:layout_below="@+id/textView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Current Kcal"
    android:id="@+id/textView2"
    android:textSize="30dp"
    android:textColor="#ff6c78ff"
    android:textStyle="bold"
    android:layout_centerHorizontal="true" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/img70dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#ffd0dbff"
    android:id="@+id/linearLayout">

    <ImageView
        android:layout_width="@dimen/img70dp"
        android:layout_height="@dimen/img70dp"
        android:id="@+id/imageCategory"
        android:layout_weight="1"
        android:src="@drawable/category_icon"
        android:background="#ffcaffaa"
        />
    <ImageView
        android:layout_width="@dimen/img70dp"
        android:layout_height="@dimen/img70dp"
        android:id="@+id/imageAddFriend"
        android:layout_weight="1"
        android:src="@drawable/addfriend_icon"
        android:background="#ffd7deff" />
    <ImageView
        android:layout_width="@dimen/img70dp"
        android:layout_height="@dimen/img70dp"
        android:id="@+id/imageRanking"
        android:layout_weight="1"
        android:src="@drawable/rankings_icon"
        android:background="#ffcaffaa"
       />
    <ImageView
        android:layout_width="@dimen/img70dp"
        android:layout_height="@dimen/img70dp"
        android:id="@+id/imageNotification"
        android:layout_weight="1"
        android:src="@drawable/notification_icon"
        android:background="#ffd7deff" />
</LinearLayout>

    <ImageView
        android:layout_width="@dimen/img40dp"
        android:layout_height="@dimen/img40dp"
        android:id="@+id/imageView2" />

</RelativeLayout>